div.gameList
    each item,index in gameData
        a(href=`/pages/${item.info.img_name.slice(0, -4)}`) 
            div.item-left
                img(src='https://resource.topziz.com/' + item.info.img_name, alt="")
                span.item-left-index #{index+1}
            div.item-right
                p(style="font-size: 16px;margin-bottom: 6px;white-space: nowrap;overflow: hidden;text-overflow: ellipsis") #{item.info.title}
                p(style="display: flex")
                    span.rate #{item.info.rate}
                        img(src="/img/star.svg", alt="",style="height: 10px; width: 10px")
                    span #{item.info.installs}
                        img(src="/img/download2.svg", alt="",style="height: 12px; width: 12px; margin-right: 3px")
                    span #{item.info.price}
                    span #{item.info.size}
style
    include /less/components/gameCardList.less                